<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="MAUITodo.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:MAUITodo.Views"
    Shell.FlyoutBehavior="Disabled">

    <TabBar>
        <Tab Title="Todo Lists">
            <ShellContent
                Title="Todo Lists"
                ContentTemplate="{DataTemplate views:ListsPage}"
                Route="ListsPage" />
        </Tab>
        <Tab Title="SQL Console">
            <ShellContent
                Title="SQL Console"
                ContentTemplate="{DataTemplate views:SqlConsolePage}"
                Route="SqlConsolePage" />
        </Tab>
    </TabBar>

</Shell>
